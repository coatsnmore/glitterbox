---
import Layout from '../layouts/Layout.astro';
---

<Layout>
        <div id="game-container">
                <iframe
                        src="/tetris/index.html"
                        width="100%"
                        height="100%"
                        frameborder="0"
                        allow="gamepad"
                        title="Glitterbox Tetris"
                ></iframe>
        </div>
</Layout>

<style>
        #game-container {
                width: 100%;
                height: 100vh;
                background: radial-gradient(circle at top, #1e293b, #0f172a 80%);
        }

        iframe {
                width: 100%;
                height: 100%;
                border: none;
        }
</style>
